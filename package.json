  "license": "MIT",
  "dependencies": {
    "bitcoind-client": "^2.2.9",
    "compression": "^1.7.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "helmet": "^3.12.0",
    "isomorphic-fetch": "^2.2.1",
    "prom-client": "^10.2.3",
    "serve-static": "^1.13.2"
  }
}
