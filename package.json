{
  "name": "bitcoind-exporter",
  "version": "2.5.4",
  "description": "Bitcoind metrics prometheus exporter",
  "main": "index.js",
  "scripts": {
    "test": "dgoss run babylonchain/bitcoind-exporter",
    "start": "node -r dotenv/config index.js",
    "build": "docker build -t babylonchain/bitcoind-exporter .",
    "push": "docker push babylonchain/bitcoind-exporter",
    "publish": "npm run build && npm run test && npm run push",
    "demo": "docker-compose up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/babylonchain/bitcoind-exporter.git"
  },
  "keywords": [
    "bitcoin",
    "bitcoind",
    "monitoring",
    "prometheus",
    "wallet",
    "metrics",
    "exporter"
  ],
